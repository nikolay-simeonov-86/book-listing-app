{% extends "base.twig" %}

{% block title %}Welcome{% endblock %} 

{% block body %}
    <h1 class="text-center">Welcome {% if session.user %}{{ session.user.getFirstName() }} {% endif %}to book listing application</h1>
{% if not session.user %}
    <div class="row text-center">
        <div class="col-4"></div>
        <div class="col-2">
            <a class="btn btn-primary" href="{{ request.uri() }}login">Login</a>
        </div>
        <div class="col-2">
            <a class="btn btn-primary" href="{{ request.uri() }}register">Register</a>
        </div>
        <div class="col-4"></div>
    </div>
{% else %}
    <div class="row text-right">
        <div class="col-12">
            <a class="btn btn-primary" href="{{ request.uri() }}logout">Logout</a>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-4"></div>
        <div class="col-4">
            <a class="btn btn-primary" href="{{ request.uri() }}create-book">Create Book</a>
        </div>
        <div class="col-4"></div>
    </div>
{% endif %}
{% endblock %}